{
  "compileOnSave": false,
  "compilerOptions": {
    "charset": "utf8",
    "importHelpers": false,
    "lib": ["dom", "es5", "es6", "es2016.array.include"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5",
    "typeRoots": []
  },
  "include": ["test/**/*"],
  "exclude": ["node_modules"]
}
